root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
max_line_length = 120
insert_final_newline = true
trim_trailing_whitespace = true
ktlint_disabled_rules = no-wildcard-imports, function-naming
ktlint_standard_function-naming = disabled
ktlint_standard_no-wildcard-imports = disabled

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.{json,xml}]
indent_size = 2

[*.gradle.kts]
max_line_length = 120

[*.properties]
max_line_length = 120